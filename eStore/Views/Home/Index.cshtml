@model DataAccess.Models.Member

@{
    ViewData["Title"] = "Home Page";
    Layout = null;
    var ERROR_MESSAGE = TempData["ERROR"];
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/eStore.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="mt-4">Log in</h1><br />
                <form asp-controller="Home" asp-action="Login" method="post">
                    <div class="form-group my-3">
                        <label asp-for="Email">Email</label><br />
                        <input asp-for="Email" placeholder="Enter email" />
                    </div>
                    <div class="form-group my-3">
                        <label asp-for="Password">Password</label><br />
                        <input asp-for="Password" type="password" placeholder="Enter password" />
                    </div>
                    <div class="form-group my-3">
                        <h6 class="text-warning">@ERROR_MESSAGE</h6>
                    </div>
                    <div class="form-group my-3">
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
